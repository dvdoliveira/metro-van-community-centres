          <li id="logged-user">
            Signed in as <%= current_user.full_name %>
          </li> 
          <li>
            <button type="button" class="btn btn-default navbar-btn" id="btn-login" id="btn-login"><%= link_to "Log out", session_path("current"), method: :delete %></button>
