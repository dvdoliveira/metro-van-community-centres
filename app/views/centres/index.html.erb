<!-- Content -->
<div class="container-fluid" id="main">
  <div class="row">
    <div class="col-xs-8" id="left">
      <h1>Listing centres</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @centres.each do |centre| %>
            <tr>
              <td><%= centre.name %></td>
              <td><%= centre.address + ", " + centre.city + ", " + centre.province %></td>
              <td><%= link_to 'Show', centre %></td>
              <td><%= link_to 'Edit', edit_centre_path(centre) %></td>
              <td><%= link_to 'Destroy', centre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Centre', new_centre_path %>    

    </div>
  </div>
</div> <!-- /Content -->


